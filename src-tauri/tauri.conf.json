{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "DeskPad",
  "version": "0.2.0",
  "identifier": "com.aleksei.deskpad",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "DeskPad",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["appimage", "dmg", "nsis", "msi"],
    "macOS": {
      "dmg": {
        "windowSize": {
          "height": 400,
          "width": 660
        }
      },
      "hardenedRuntime": true,
      "minimumSystemVersion": "10.13"
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "license": "MIT",
    "publisher": "Aleksei Efimov",
    "copyright": "Â© 2026 Aleksei Efimov"
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:deskpad.db"]
    }
  }
}
